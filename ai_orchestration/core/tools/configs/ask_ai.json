{
  "tool_id": "ask_ai",
  "description": "Ask an AI agent to answer a question using provided context",
  "type": "function_tool",
  "parameters": {
    "question": {
      "type": "string",
      "description": "Question to ask the AI agent",
      "required": true
    },
    "context": {
      "type": "string",
      "description": "Context for the question",
      "required": false,
      "default": ""
    },
    "agent_model": {
      "type": "string",
      "description": "AI model to use",
      "required": false,
      "default": "claude-sonnet-4-5-20250929"
    }
  },
  "returns": {
    "answer": "string",
    "model_used": "string",
    "error": "string"
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "answer": {"type": "string"},
      "model_used": {"type": "string"}
    },
    "required": ["answer"]
  }
}
